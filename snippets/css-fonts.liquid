<style>
  {% comment %} FKScreamer font {% endcomment %}
  @font-face {
    font-family: 'FKScreamer';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: local('FKScreamer Regular'), local('FKScreamer-Regular'),
         url(https://cdn.shopify.com/s/files/1/1442/3288/files/FKScreamer-Regular.woff2) format('woff2');
  }
  @font-face {
    font-family: 'FKScreamer';
    font-style: normal;
    font-weight: 500;
    font-display: swap;
    src: local('FKScreamer Medium'), local('FKScreamer-Medium'),
         url(https://cdn.shopify.com/s/files/1/1442/3288/files/FKScreamer-Medium.woff2) format('woff2');
  }
  @font-face {
    font-family: 'FKScreamer';
    font-style: normal;
    font-weight: 700;
    font-display: swap;
    src: local('FKScreamer Bold'), local('FKScreamer-Bold'),
         url(https://cdn.shopify.com/s/files/1/1442/3288/files/FKScreamer-Bold.woff2) format('woff2');
  }
  @font-face {
    font-family: 'FKScreamer';
    font-style: normal;
    font-weight: 900;
    font-display: swap;
    src: local('FKScreamer Black'), local('FKScreamer-Black'),
         url(https://cdn.shopify.com/s/files/1/1442/3288/files/FKScreamer-Black.woff2) format('woff2');
  }

  {% comment %} Avantt font {% endcomment %}
  @font-face {
    font-family: 'Avantt';
    font-style: normal;
    font-weight: 300;
    font-display: swap;
    src: local('Avantt Light'), local('Avantt-Light'),
         url(https://cdn.shopify.com/s/files/1/0690/8647/8649/files/Avantt-Light.woff2) format('woff2'),
         url(https://cdn.shopify.com/s/files/1/0690/8647/8649/files/Avantt-Light.woff) format('woff');
  }
  @font-face {
    font-family: 'Avantt';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: local('Avantt Regular'), local('Avantt-Regular'),
         url(https://cdn.shopify.com/s/files/1/0690/8647/8649/files/Avantt-Regular.woff2) format('woff2'),
         url(https://cdn.shopify.com/s/files/1/0690/8647/8649/files/Avantt-Regular.woff) format('woff');
  }
  @font-face {
    font-family: 'Avantt';
    font-style: normal;
    font-weight: 600;
    font-display: swap;
    src: local('Avantt SemiBold'), local('Avantt-SemiBold'),
         url(https://cdn.shopify.com/s/files/1/0690/8647/8649/files/Avantt-SemiBold.woff2) format('woff2'),
         url(https://cdn.shopify.com/s/files/1/0690/8647/8649/files/Avantt-SemiBold.woff) format('woff');
  }
  @font-face {
    font-family: 'Avantt';
    font-style: normal;
    font-weight: 700;
    font-display: swap;
    src: local('Avantt Bold'), local('Avantt-Bold'),
         url(https://cdn.shopify.com/s/files/1/0690/8647/8649/files/Avantt-Bold.woff2) format('woff2'),
         url(https://cdn.shopify.com/s/files/1/0690/8647/8649/files/Avantt-Bold.woff) format('woff');
  }

  body {
    font-family: "Avantt";
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  .banner__heading,
  .h1,
  .h2,
  .h3,
  .h4,
  .h5,
  .h6 {
    font-family: "Avantt";
    font-weight: 600;
  }
  
  [id^="quiz-kit"] {
    font-family: "Avantt" !important;
  }
</style> 
